<section>
    <div class="container">
        <div class="row mt-4">
            <a class="btn btn-success ml-auto" href="/admin/add-product">Add Product</a>
        </div>
        <table class="table mt-4">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Title</th>
                    <th scope="col">Product_Type</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                </tr>

            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{count}}</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Description}}</td>
                    <td>Rs.{{this.Price}}</td>
                    <td><img style="height: 50px; width:50px; " src="product-images/{{this._id}}.jpg"
                            alt="{{this.name}}"></td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                            onclick="return confirm('Are you sure to delete {{this.Name}} ?')">Delete</a>

                        <!-- <a class="btn btn-danger" href="/admin/delete-product?id={{this._id}}&name=namshad">Delete</a> -->
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>